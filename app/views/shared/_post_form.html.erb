<div class="my-3 p-3 bg-white rounded shadow-sm">
  <%= form_with(model: @post, local: true) do |f| %>
    <div class="form-group">
      <%= f.text_area :content, class: "form-control", placeholder: "Write a new post...", rows: 2 %>
    </div>
    <div class="form-group">
      <%= f.submit "Post now", class: "btn btn-info btn-block" %>
    </div>
  <% end %>
</div>
