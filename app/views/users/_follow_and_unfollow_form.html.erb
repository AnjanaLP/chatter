<% if user_signed_in? %>
  <% if current_user == @user %>
    <%= render 'shared/post_form' %>
  <% elsif current_user.following?(@user) %>
    <%= render 'unfollow' %>
  <% else %>
    <%= render 'follow' %>
  <% end %>
<% else %>
  <%= link_to "Follow", users_path, class: "btn btn-info text-white btn-block font-weight-bold" %>
<% end %>
